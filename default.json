{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Is best-practices without ignoreModulesAndTests; show all confidence badges; removing hourly limit because we run once a day",
  "extends": [
    "config:best-practices",
    ":semanticPrefixFixDepsChoreOthers",
    
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
    
    "mergeConfidence:all-badges",
    ":prHourlyLimitNone"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "description": "Group all NatchOS packages together",
      "groupName": "NatchOS",
      "matchPackagePrefixes": [
        "NatchOS."
      ]
    },
    {
      "description": "Group all NatchCms packages together",
      "groupName": "NatchCms",
      "matchPackagePrefixes": [
        "NatchCms."
      ]
    }
  ],
  "html": {
    "fileMatch": ["\\.html?$", "\\.cshtml$"]
  }
}
